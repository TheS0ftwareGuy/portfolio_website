{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "plugins": ["react"],
  "rules": {
    "@typescript-eslint/no-unused-vars": "error",
    "prefer-const": "error",
    "react/no-unescaped-entities": ["error", {
      "forbid": [
        {
          "char": "'",
          "alternatives": ["&apos;"]
        }
      ]
    }]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
} 